/* pages/auth/accountLogin/accountLogin.wxss */
@import "/styles/iconfont.wxss";

.form-box {
  width: 90%;
  margin: 100rpx auto;
  border-radius: 30rpx;
  background: #ffffff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.form-item {
  height: 100rpx;
  width: 90%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 1rpx solid #efefef;
}

.username {
  width: 72%;
}

.password {
  width: 72%;
}

.place_holder {
  font-size: 30rpx;
}

.login-btn {
  margin: 0 auto;
  margin-top: 40rpx;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 30rpx;
  width: 90%;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  border-radius: 50rpx;
}

.form-item-text {
  width: 90%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx 0;
}

.text-font {
  font-size: 40rpx;
  font-weight: 500;
}
