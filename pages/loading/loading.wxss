/* pages/others/loading/loading.wxss */

.loading_box {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  text-align: center;
  position: fixed;
  z-index: 20;
  top: 0;
  bottom: 0;
  background-color: #efefef;
}

.loading_box>view {
  display: inline-block;
}

.loading {
  width: 20rpx;
  height: 20rpx;
  background: rgb(183, 108, 37);
  border-radius: 50%;
  margin-left: 15rpx;
}

.loading_1 {
  -webkit-animation: loading 600ms linear infinite alternate;
  animation: loading 600ms linear infinite alternate;
}

.loading_2 {
  -webkit-animation: loading 600ms linear infinite alternate;
  animation: loading 600ms linear infinite alternate;
  animation-delay: 200ms;
}

.loading_3 {
  -webkit-animation: loading 600s linear infinite alternate;
  animation: loading 600ms linear infinite alternate;
  animation-delay: 400ms;
}

.loading_4 {
  -webkit-animation: loading 600s linear infinite alternate;
  animation: loading 600ms linear infinite alternate;
  animation-delay: 600ms;
}

@-webkit-keyframes loading {
  0% {
    transform: scale(1);
  }

  100% {
    transform: scale(0);
  }
}

@keyframes loading {
  0% {
    transform: scale(1);
  }

  100% {
    transform: scale(0);
  }
}

.loading_error_box {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  text-align: center;
  position: fixed;
  z-index: 11;
  top: 0;
  bottom: 0;
  background-color: #efefef;
}

.loading_offline {
  height: 17%;
  width: 30%;
}

.loading_fade_circle {
  margin: 0 auto;
  width: 30rpx;
  height: 30rpx;
  background: rgb(183, 108, 37);
  border-radius: 50%;
  -webkit-animation: fading_circle 1s ease-out infinite alternate;
  animation: fading_circle 1s ease-out infinite alternate;
}

@-webkit-keyframes fading_circle {
  0% {
    transform: scale(1.5);
    opacity: 0.2;
  }

  100% {
    transform: scale(0.1);
    opacity: 1;
  }
}

@keyframes fading_circle {
  0% {
    transform: scale(1.5);
    opacity: 0.2;
  }

  100% {
    transform: scale(0.1);
    opacity: 1;
  }
}

.loading_more {
  width: 100%;
  position: fixed;
  z-index: -1;
  bottom: 10rpx;
}