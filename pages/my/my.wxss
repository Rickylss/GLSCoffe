/* pages/my/my.wxss */
@import '/styles/iconfont.wxss';

.profile {
  width: 50%;
  height: 30%;
  margin: 8% auto;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.profile_avatar {
  background-size: cover;
  width: 250rpx;
  height: 250rpx;
  margin: 5% 0;
}

.profile_info_name {
  font-size: 35rpx;
  font-weight: 600;
}

.userCenter {
  width: 85%;
  border: 2rpx solid #ffffff;
  border-radius: 20rpx;
  background-color: #ffffff;
  margin: 8% auto;
  box-shadow: 0rpx 0rpx 2rpx #888888;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.userCenter_cell {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  text-align: start;
  width: 80%;
  margin: 6% 0;
}

.line {
  border-top: 2rpx solid #efefef;
  width: 85%;
}

.userCenter_cell_tag {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.userCenter_cell_font {
  text-align: center;
  margin: auto 30rpx;
  font-size: 30rpx;
  font-weight: 550;
}

